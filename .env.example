# Nostr Configuration
NOSTR_PUBKEY=your_nostr_pubkey_here
NOSTR_RELAYS=wss://relay.nostr.band,wss://relay.damus.io,wss://eden.nostr.land,wss://nos.lol

# Discord Configuration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Bot Configuration
CHECK_INTERVAL_MS=30000
DEBUG=false

# Event Types to Monitor (comma-separated)
# 1 = text notes, 7 = reactions, 9735 = zaps, 6 = reposts, 0 = metadata
MONITORED_EVENT_KINDS=1,7,9735,6

# Optional: Node Environment
NODE_ENV=production